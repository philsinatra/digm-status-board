{
	"cSpell.ignoreWords": [
		"backface",
		"calt",
		"clig",
		"CURDATE",
		"currentcolor",
		"digm",
		"drexel",
		"grayscale",
		"lede",
		"liga",
		"nowrap",
		"nums",
		"oldstyle",
		"optimizelegibility",
		"philsinatra",
		"roboto",
		"segoe",
		"slugified",
		"slugifies",
		"smcp",
		"spritesheet",
		"srgb",
		"svelte",
		"sveltekit",
		"tagname",
		"willink"
	],
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit",
		"source.fixAll.stylelint": "explicit"
	},
	"eslint.format.enable": true,
	"eslint.nodePath": "./node_modules/.bin/eslint",
	"eslint.validate": ["javascript", "typescript", "svelte", "html", "json"],
	"eslint.workingDirectories": ["./"],
	"stylelint.configFile": ".stylelintrc.json",
	"stylelint.enable": true,
	"stylelint.validate": ["css", "svelte"]
}
